# Server Configuration
PORT=3000
HOST=0.0.0.0
NODE_ENV=development
TRUST_PROXY=false

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# Database Connection Pool Configuration
DB_POOL_MIN=5
DB_POOL_MAX=20

# JWT Configuration
JWT_ACCESS_SECRET=your-32-character-minimum-access-token-secret-here
JWT_REFRESH_SECRET=your-32-character-minimum-refresh-token-secret-here
ACCESS_TOKEN_TTL=15m
REFRESH_TOKEN_TTL=7d

# Cookie Configuration
COOKIE_DOMAIN=localhost
COOKIE_SECURE=false

# CORS Configuration
# Comma-separated list of allowed origins (e.g., https://app1.com,https://app2.com)
# If not provided: allows all origins in development, requires explicit origins in production
CORS_ORIGIN=

# Rate Limiting Configuration
RATE_LIMIT_MAX=100
RATE_LIMIT_TIME_WINDOW=1 minute

# Logging Configuration
LOG_LEVEL=info

# Query Monitoring Configuration
SLOW_QUERY_THRESHOLD=1000

# Redis Configuration (Optional - for caching)
# Use either REDIS_URL or REDIS_HOST/REDIS_PORT
REDIS_URL=
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TTL=3600

# Swagger/OpenAPI Configuration
# Enable Swagger UI in production (default: false, auto-enabled in dev/test)
ENABLE_SWAGGER=false
